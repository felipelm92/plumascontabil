@{
    ViewData["Title"] = "Lançamento";
}


@using (Html.BeginForm("Filtrar", "Lancamento", FormMethod.Post))
{
    <p>
        Empresa: @Html.DropDownList("EmpresaId", String.Empty)
        Comeprencia: @Html.DropDownList("CompetenciasId", String.Empty)
        <input type="submit" value="Enviar" />
    </p>
}
<!--Melhorar foreach-->
<div class="row">
    <div class="col">
        @foreach (var categoria in ((List<Categoria>)ViewBag.Categorias).Where(x => x.Id < 10))
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th colspan="3">@categoria.Descricao</th>
                    </tr>
                </thead>
                @foreach (var contas in ((List<Conta>)ViewBag.Contas).Where(c => c.CategoriaId == categoria.Id))
                {
                    <tbody>
                        <tr>
                            <td class="codigo">@contas.Codigo</td>
                            <td class="descricao">@contas.Descricao</td>
                            @if (((List<Lancamento>)ViewBag.LancamentosId).Any(l => l.ContaId == contas.Id))
                            {
                                @foreach (var lancamentos in ((List<Lancamento>)ViewBag.LancamentosId).Where(l => l.ContaId == contas.Id))
                                {
                                    <td class="valor"><input type="number" name="name" value="@lancamentos.Valor" /></td>
                                }
                            }
                            else
                            {
                                <td class="valor"><input type="number" name="name" value="" /></td>
                            }

                        </tr>
                    </tbody>
                }
            </table>
        }
    </div>
    <div class="col">
        @foreach (var categoria in ((List<Categoria>)ViewBag.Categorias).Where(c => c.Id >= 10 && c.Id <= 19))
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th colspan="3">@categoria.Descricao</th>
                    </tr>
                </thead>
                @if (categoria.Id == 19)
                {
                    <tbody>
                        @for (int i = 0; i < 8; i++)
                        {
                            <tr>
                                <td class="codigo"></td>
                                <td class="descricao"><input type="text" name="name" value="" /></td>
                                <td class="valor"><input type="number" name="name" value="" /></td>
                            </tr>
                        }
                        <tr>
                            <td class="codigo"></td>
                            <td class="descricao">Total: </td>
                            <td class="valor"><input type="number" name="name" value="" /></td>
                        </tr>
                    </tbody>
                }
                @foreach (var contas in ((List<Conta>)ViewBag.Contas).Where(c => c.CategoriaId == categoria.Id))
                {
                    @if (contas.Codigo == 36)
                    {
                        <tbody>
                            @for (int i = 0; i < 7; i++)
                            {
                                <tr>
                                    <td class="codigo"></td>
                                    <td class="descricao"><input type="text" name="name" value="" /></td>
                                    <td class="valor"><input type="number" name="name" value="" /></td>
                                </tr>
                            }
                            <tr>
                                <td class="codigo"></td>
                                <td class="descricao">Total: </td>
                                <td class="valor"><input type="number" name="name" value="" /></td>
                            </tr>
                        </tbody>
                    }
                    else
                    {
                        <tbody>
                            <tr>
                                <td class="codigo">@contas.Codigo</td>
                                <td class="descricao">@contas.Descricao</td>
                                <td class="valor"><input type="number" name="name" value="" /></td>
                            </tr>
                            <tr>
                        </tbody>
                    }
                }
                <tbody>
                </tbody>

            </table>
        }
    </div>
    <div class="col">
        @foreach (var categoria in ((List<Categoria>)ViewBag.Categorias).Where(c => c.Id > 19))
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th colspan="3">@categoria.Descricao</th>
                    </tr>
                </thead>
                @if (categoria.Id == 25)
                {
                    <tbody>
                        @for (int i = 0; i < 8; i++)
                        {
                            <tr>
                                <td class="codigo"></td>
                                <td class="descricao"><input type="text" name="name" value="" /></td>
                                <td class="valor"><input type="number" name="name" value="" /></td>
                            </tr>
                        }
                        <tr>
                            <td class="codigo"></td>
                            <td class="descricao">Total: </td>
                            <td class="valor"><input type="number" name="name" value="" /></td>
                        </tr>
                    </tbody>
                }
                @foreach (var contas in ((List<Conta>)ViewBag.Contas).Where(c => c.CategoriaId == categoria.Id))
                {
                    @if (contas.Codigo == 38)
                    {
                        <tbody>
                            @for (int i = 0; i < 40; i++)
                            {
                                <tr>

                                    <td class="codigo"></td>
                                    <td class="descricao"><input type="text" name="name" value="" /></td>
                                    <td class="valor"><input type="number" name="name" value="" /></td>

                                </tr>
                            }
                            <tr>
                                <td>#</td>
                                <td>Total:</td>
                                <td><input type="number" name="name" value="" /></td>
                            </tr>
                        </tbody>
                    }
                    else if (contas.Codigo == 1)
                    {
                        <tbody>
                            @for (int i = 0; i < 3; i++)
                            {
                                <tr>
                                    <td class="codigo"></td>
                                    <td class="descricao"><input type="text" name="name" value="" /></td>
                                    <td class="valor"><input type="number" name="name" value="" /></td>
                                </tr>
                            }
                            <tr>
                                <td class="codigo"></td>
                                <td class="descricao">Total: </td>
                                <td class="valor"><input type="number" name="name" value="" /></td>
                            </tr>
                        </tbody>
                    }
                    else
                    {
                        <tbody>
                            <tr>
                                <td class="codigo">@contas.Codigo</td>
                                <td class="descricao">@contas.Descricao</td>
                                <td class="valor"><input type="number" name="name" value="" /></td>
                            </tr>
                            <tr>
                        </tbody>
                    }
                }
            </table>
        }
    </div>
</div>