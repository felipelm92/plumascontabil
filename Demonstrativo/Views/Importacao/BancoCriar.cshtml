@model OfxBancoViewModel
@{
    Layout = "_LayoutSemFiltroEmpresa";
    ViewData["Title"] = "Banco";
}


<div class="row form-lancamento mx-2">
    <div class="col-md-4 table-bordered mx-auto rounded-lg bg-light">
        <form asp-action="BancoGravar" method="post">
            <div class="text-plumas">
                <br/>
                @ViewData["Title"]
                <br/>
            </div>
            <h4>Criar Banco</h4>
            <hr />
            <div class="form-group">
                <label>Codigo</label>
                <input asp-for="@Model.Codigo" class="form-control" />
            </div>
            <div class="form-group">
                <label>Nome</label>
                <input asp-for="@Model.Nome" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-plumas">Gravar</button>
        </form>
        <br/>
    </div>
</div>