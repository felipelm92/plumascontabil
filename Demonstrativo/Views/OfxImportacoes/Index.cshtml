@{
	Layout = "_LayoutSemFiltroEmpresa";
	ViewData["Title"] = "Importar";
}

@if (ViewBag.Message != null)
{
	<script type="text/javascript">
		window.onload = function() {
			Swal.fire({
				icon: 'warning',
				title: 'Oops...',
				text: 'Anexe um arquivo!',

			})
		};
	</script>
}
@if (ViewBag.Importado != null)
{
	<script type="text/javascript">
		window.onload = function() {


			Swal.fire({
				icon: 'success',
				title: 'Sucesso...',
				text: "@Html.Raw(ViewBag.Importado)",


			}).then((result) => {
				window.location.href = '/Lancamento/Index';
			})
		};
	</script>
}
