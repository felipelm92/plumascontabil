@{
    Layout = "_LayoutSemFiltroEmpresa";
    ViewData["Title"] = "Importar";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            Swal.fire({
                icon: 'warning',
                title: 'Oops...',
                text: '@Html.Raw(ViewBag.Message)',

            })
        };
    </script>
}

@if (ViewBag.Importado != null)
{
    <script type="text/javascript">
		window.onload = function() {


			Swal.fire({
				icon: 'success',
				title: 'Sucesso...',
				text: "@Html.Raw(ViewBag.Importado)",


			}).then((result) => {
				window.location.href = '/Lancamento/Index';
			})
		};
    </script>
}
@if (ViewBag.AdicionarBanco != null)
{
    <script type="text/javascript">
		window.onload = function() {

			Swal.fire({
				icon: 'warning',
				title: 'Ops...',
				text: "@Html.Raw(ViewBag.AdicionarBanco)",

			})
		};
    </script>
}
@if (ViewBag.ContaCorrenteNaoEncontrada != null)
{
    <script type="text/javascript">
        window.onload = function () {

            Swal.fire({
                icon: 'warning',
                title: 'Ops...',
                text: "Conta Corrente não encontrada, baseado no OFX",

            })
        };
    </script>
}

@if (ViewBag.SemArquivo != null)
{
    <script type="text/javascript">
		window.onload = function() {

			Swal.fire({
				icon: 'warning',
				title: 'Ops...',
				text: "@Html.Raw(ViewBag.SemArquivo)",

			})
		};
    </script>
}
@if (ViewBag.SemBanco != null)
{
    <script type="text/javascript">
		window.onload = function() {

			Swal.fire({
				icon: 'warning',
				title: 'Ops...',
				text: "@Html.Raw(ViewBag.SemBanco)",

			})
		};
    </script>
}

<div class="py-4 pl-3 d-flex justify-content-between">
    <h1 class="page-title">@ViewData["Title"]</h1>

</div>
<div class="row import-ofx">
    <div class="col-12 border-0 table-bordered">

        <form asp-action="OfxImportar" method="post" enctype="multipart/form-data" class="mt-5">
            @*
                <label class="table-bordered border-dark mx-auto rounded-lg bg-light py-3 d-block cursor-pointer border-dashed">
                <h6 class="display px-3 text-muted">Bancos</h6>
                @Html.DropDownList("BancosId", null, "Bancos", new { @name = "idBanco", @class = "form-control my-2 mr-sm-2 w-50 select" })
                </label>
            *@

            <h2 class="text-center mt-2">Selecione o banco</h2>
            <div class="d-flex justify-content-center flex-wrap py-3" style="gap: 10px">
                @foreach (var item in ViewBag.BancosId)
                {

                    <label>
                        <span id="Bank_@item.Value" class="icon-banco" style="background-image:url(https://macmagazine.com.br/wp-content/uploads/2011/04/18-bradesco_icon.png)"></span>
                        <input type="radio" name="BancosId" value="@item.Value" class="sr-only">
                    </label>
                }
            </div>

            <h2 class="text-center">Selecione o arquivo</h2>
            <label class="table-bordered border-dark mx-auto rounded-lg bg-light py-3 d-block cursor-pointer border-dashed col-6">

                <input type="file" name="ofxArquivo" class="btn form-control-file" accept=".ofx">
            </label>

            <div class="d-flex justify-content-center">
                <input type="button" value="Enviar arquivo" data-toggle="modal" data-target="#exampleModal" name="submit" class="btn btn-plumas mt-4">
            </div>




            <div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Informações do Lote</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-12">
                                    <label for="DescricaoLote">
                                        Descrição do Lote
                                        <input class="form-control text-uppercase" name="DescricaoLote" id="DescricaoLote" type="text" maxlength="70" />
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Avançar</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <h2 class="text-center mt-5">Lista de arquivos</h2>
        <table class="w-100 mx-auto">
            <thead>
                <tr>
                    <th class="bg-categoria text-white p-2">ID</th>
                    <th class="bg-categoria text-white p-2">Nome</th>
                    <th class="bg-categoria text-white p-2">Data de inclusão</th>
                    <th class="bg-categoria text-white p-2">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Lotes)
                {
                    <tr>
                        <td class="text-center">item.Id</td>
                        <td class="text-center">item.Descricao</td>
                        <td class="text-center">item.Data.Date.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center">
                                <button data-toggle="tooltip" title="Editar Lote">
                                    <i class="fa fa-edit"></i>
                                </button>
                                <button data-toggle="tooltip" title="Excluir Lote">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
                @if (ViewBag.Lotes.Count == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center">Não Há Dados</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $(':radio[name=BancosId]').change(function () {
            var value = $(this).val();
            $("span[id*=Bank]").each(function () {
                $(this).removeClass("checkado");
            });
            $("#Bank_" + value).addClass("checkado");
        });
    </script>



}
