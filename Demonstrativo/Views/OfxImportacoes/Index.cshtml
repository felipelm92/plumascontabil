@{
	var checkadondo = "";
}
<div class="py-4 pl-3 d-flex justify-content-between">
	<h1 class="page-title">@ViewData["Title"]</h1>

</div>
<div class="row import-ofx">
	<div class="col-12 border-0 table-bordered">

		<form asp-action="OfxImportar" method="post" enctype="multipart/form-data" class="mt-5">
			@*
			<label class="table-bordered border-dark mx-auto rounded-lg bg-light py-3 d-block cursor-pointer border-dashed">
			<h6 class="display px-3 text-muted">Bancos</h6>
			@Html.DropDownList("BancosId", null, "Bancos", new { @name = "idBanco", @class = "form-control my-2 mr-sm-2 w-50 select" })
			</label>
			*@

			<h2 class="text-center mt-2">Selecione o banco</h2>
			<div class="d-flex justify-content-center flex-wrap py-3" style="gap: 10px">
				@foreach (var item in ViewBag.BancosId)
				{
					var checkado = item.Value == checkadondo;
					<label>
						<span id="Bank_@item.Value" class="icon-banco" style="background-image:url(https://macmagazine.com.br/wp-content/uploads/2011/04/18-bradesco_icon.png)"></span>
						<input type="radio" checked="@checkado" name="BancosId" value="@item.Value" class="sr-only">
					</label>
				}
			</div>

			<h2 class="text-center">Selecione o arquivo</h2>
			<label class="table-bordered border-dark mx-auto rounded-lg bg-light py-3 d-block cursor-pointer border-dashed col-6">

				<input type="file" name="ofxArquivo" class="btn form-control-file" accept=".ofx">
			</label>

			<div class="d-flex justify-content-center">
				<button type="button" class="btn btn-plumas-w" data-toggle="modal" data-target="#staticBackdrop">
					Enviar arquivo
				</button>
			</div>
		</form>


		<!-- Modal -->
		<div class="modal fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Nome do arquivo</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<div class="form-group">
							<label for="nomeArquivo">Nome</label>
							<input id="nomeArquivo" type="text" class="form-control" />
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
						<button type="submit" class="btn btn-plumas-w">Enviar arquivo</button>
					</div>
				</div>
			</div>
		</div>

		<h2 class="text-center mt-5">Lista de arquivos</h2>
		<table class="w-100 mx-auto">
			<thead>
				<tr>
					<th class="bg-categoria text-white p-2">ID</th>
					<th class="bg-categoria text-white p-2">Nome</th>
					<th class="bg-categoria text-white p-2">Data de inclusão</th>
					<th class="bg-categoria text-white p-2">Ações</th>
				</tr>
			</thead>
			<tbody>
				@*@foreach (var user in Model)*@
				@*{*@
				<tr>
					<td class="text-center">Id</td>
					<td class="text-center">Nome</td>
					<td class="text-center">Data de inclusção</td>
					<td class="text-center">
						<div class="d-flex justify-content-center">
							<button data-toggle="tooltip" title="Editar">
								<i class="fa fa-edit"></i>
							</button>
						</div>
					</td>
				</tr>
				@*}*@
			</tbody>
		</table>

	</div>
</div>
@section Scripts{
	<script type="text/javascript">
		$(':radio[name=BancosId]').change(function() {
			var value = $(this).val();
			$("span[id*=Bank]").each(function() {
				$(this).removeClass("checkado");
			});
			$("#Bank_" + value).addClass("checkado");
		});
	</script>



	}

