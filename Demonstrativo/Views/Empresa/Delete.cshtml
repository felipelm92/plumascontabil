@model Demonstrativo.Models.Empresa

@{
    Layout = "_LayoutSemFiltroEmpresa";
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Tem certeza que quer deletar essa empresa?</h3>
<div>
    <h4>Empresa</h4>
    <hr />
    <dl class="row">
       <dt class = "col-sm-2">
            Número da empresa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2">
            Razão Social
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RazaoSocial)
        </dd>
        <dt class = "col-sm-2">
            Nome Fantasia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apelido)
        </dd>
        <dt class = "col-sm-2">
            Cnpj
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
        <dt class = "col-sm-2">
            Situação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Situacao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Codigo" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-plumas-w">Voltar</a>

    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
      @if ((string)TempData["deletado"] == "deletado")
        {
            <script type="text/javascript">
                window.onload = function() {
                    Swal.fire({
                        icon: 'success',
                        title: 'Sucesso...',
                        text: 'Empresa deletada com sucesso',

                    })
                };
            </script>
        }
       
    }
    }