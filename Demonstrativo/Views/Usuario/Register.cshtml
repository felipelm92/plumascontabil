@model RegistrarViewModel
@{
    Layout = "_LayoutSemFiltroEmpresa";
    ViewData["Title"] = "Register";
}

<div class="py-4 pl-3 d-flex justify-content-between">
    <h1 class="page-title">@ViewData["Title"]</h1>
   
</div>
 
<div class="row form-lancamento mx-2">
    <div class="col-md-4 table-bordered mx-auto rounded-lg bg-light">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="text-plumas">
                <br/>
                @ViewData["Title"]
                <br/>
            </div>
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRole"></label>
                <select asp-for="UserRole" class="form-control select" asp-items='new SelectList(Model.UserRoles,"Id","Name")'>
                </select>
                <span asp-validation-for="UserRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpresasId"></label>
                <select asp-for="EmpresasId" class="form-control select" multiselect asp-items='ViewBag.EmpresasId'>
                </select>
                <span asp-validation-for="EmpresasId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-plumas">Register</button>
        </form>
        <br/>
    </div>
</div>