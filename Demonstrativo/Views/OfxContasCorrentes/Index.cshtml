@model IEnumerable<Demonstrativo.Models.OfxContaCorrente>

@{
	Layout = "_LayoutSemFiltroEmpresa";
	ViewData["Title"] = "Contas correntes";
}

<div class="py-4 pl-3 d-flex justify-content-between">
	<h1 class="page-title">@ViewData["Title"]</h1>

	<div>
		<a class="btn btn-plumas-w btn-nav-link" asp-action="Create">
			Nova conta corrente<i class="fa fa-plus ml-2"></i>

		</a>
	</div>

</div>

<div class="row">
	<section class="col-12 border-0 table-bordered">
		<table class="w-100 mx-auto">
			<thead>
				<tr>
					<td class="bg-categoria text-white p-2">Número conta</td>
					<td class="bg-categoria text-white p-2">@Html.DisplayNameFor(model => model.Empresa)</td>
					<td class="bg-categoria text-white p-2">Banco OFX</td>
					<td class="bg-categoria text-white p-2">Ações</td>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.NumeroConta)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Empresa.Apelido)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.BancoOfx.Id)
						</td>
						<td>
							<button data-toggle="tooltip" title="Editar" asp-action="Edit" asp-route-id="@item.Id"> <i class="fa fa-edit"></i></button>
							<button data-toggle="tooltip" title="Detalhes" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info-circle"></i></button>
							<button data-toggle="tooltip" title="Ecluir" asp-action="Delete" asp-route-id="@item.Id"> <i class="fa fa-trash"></i></button>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</section>
</div>

