@model Demonstrativo.Models.OfxBanco

@{
    Layout = "_LayoutSemFiltroEmpresa";
    ViewData["Title"] = "Editar banco";
}

<div class="py-4 pl-3 d-flex justify-content-between">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>



<form asp-action="Edit" method="post" enctype="multipart/form-data" class="row">
    <div class="col-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Codigo" class="control-label">Código</label>
            <input type="number" asp-for="Codigo" class="form-control" />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>
    </div>
    <div class="col-8">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control text-uppercase" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <div class="col-6">
        <div class="form-group">
            <label class="control-label">Ícone do banco</label>
            <input name="file" id="file" type="file" class="form-control" style="height:auto;" accept="image/png, image/gif, image/jpeg" />

        </div>
    </div>
    <div class="col-6">

        <img id="idImag" src="@Url.Content(@Model.UrlImagem)" />
    </div>
    <div class="form-group col-12">
        <a asp-action="Index" class="btn btn-plumas-w">Voltar</a>
        <input type="submit" value="Editar" class="btn btn-plumas-w" />
    </div>


</form>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">

        $("#file").change((event) => {
            const file = $("#file").prop('files')
            if (file[0]) {
                console.log(file[0]);
                $("#idImag").attr("src", URL.createObjectURL(file[0]));
            }
        })
    </script>
}
